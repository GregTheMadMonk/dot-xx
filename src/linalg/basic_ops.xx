/**
 * @file  basic_ops.xx
 * @brief Basic vector aritmetic. No documentation for functions since they
 *        are generated with macros (I know, I know, it was just too much
 *        to just write out...)
 */
export module dxx.math.linalg:basic_ops;

import dxx.assert;

import :container_traits;
import :traits;

namespace dxx::math {

#define DEF_BINARY(op_name, op_sym, op_doc) \
/* vector-vector operation */\
/*! @brief Element-wise vector op_doc. Result via output parameter */\
export \
template <\
    mut_vector Out,\
    vector_like<Out> U,\
    vector_like<Out> V\
> inline constexpr \
void op_name (U&& u, V&& v, Out& out) {\
    dxx::assert::debug( std::ranges::size(u) == std::ranges::size(v) );\
    for (\
        auto [ oe, ue, ve ] : std::views::zip(\
            out, std::forward<U>(u), std::forward<V>(v)\
        )\
    ) { oe = ue op_sym ve; }\
} /* <-- op_name(u, v, out) */\
\
/*! @brief Element-wise vector op_doc. Result in return value of a user-provided type */\
export \
template <\
    container_traits::returnable Out,\
    vector_like<Out> U,\
    vector_like<Out> V\
>\
[[nodiscard]]\
inline constexpr \
Out op_name (U&& u, V&& v) {\
    auto out = container_traits::Traits<Out>::construct(\
        std::ranges::size(u)\
    );\
    op_name(std::forward<U>(u), std::forward<V>(v), out);\
    return out;\
} /* <-- Out op_name(u, v) */\
\
/*! @brief Element-wise vector op_doc. Result in return value of automatically selected type */\
export \
template <vector U, vector_like<U> V>\
requires container_traits::returnable<std::remove_cvref_t<U>>\
[[nodiscard]] \
inline constexpr \
std::remove_cvref_t<U> op_name (U&& u, V&& v) {\
    return op_name<std::remove_cvref_t<U>, U, V>(\
        std::forward<U>(u),\
        std::forward<V>(v)\
    );\
} /* <-- ...<U> op_name(u, v) */\
\
namespace vector_operators {\
\
/*! @brief Operator for a corrsponding @ref op_name overload */\
export \
template <vector U, vector_like<U> V>\
requires container_traits::returnable<std::remove_cvref_t<U>>\
[[nodiscard]] \
inline constexpr \
std::remove_cvref_t<U> operator op_sym (U&& u, V&& v) {\
    return op_name(std::forward<U>(u), std::forward<V>(v));\
} /* <-- operator op_sym(u, v) */\
\
/*! @brief Inplace element-wise vector op_doc */\
export \
template <mut_vector U, vector_like<U> V>\
inline constexpr \
U& operator op_sym ## = (U& u, const V& v) {\
    for (auto [ ue, ve ] : std::views::zip(u, v)) {\
        ue op_sym ## = ve;\
    }\
    return u;\
} /* <-- operator op_sym=(u, v) */\
\
} /* <-- namespace vector_operators */\
\
/* vector-real operation */\
/*! @brief Element-wise op_doc of vector elements with a scalar. Result via output parameter */\
export \
template <\
    mut_vector Out,\
    vector_like<Out> U,\
    std::convertible_to<RealOf<Out>> Scalar\
> inline constexpr \
void op_name (U&& u, const Scalar& scalar, Out& out) {\
    for (\
        auto [ oe, ue ] : std::views::zip(\
            out, std::forward<U>(u)\
        )\
    ) { oe = ue op_sym static_cast<RealOf<U>>(scalar); }\
} /* <-- op_name(u, scalar, out) */\
\
/*! @brief Element-wise op_doc of vector elements with a scalar. Result in return value of a user-provided type */\
export \
template <\
    container_traits::returnable Out,\
    vector_like<Out> U,\
    std::convertible_to<RealOf<Out>> Scalar\
>\
[[nodiscard]]\
inline constexpr \
Out op_name (U&& u, const Scalar& scalar) {\
    Out ret = container_traits::Traits<Out>::construct( std::ranges::size(u) );\
    op_name(std::forward<U>(u), scalar, ret);\
    return ret;\
} /* <-- Out op_name(u, scalar) */ \
/*! @brief Element-wise op_doc of vector elements with a scalar. Result in return value of automatically selected type */\
export \
template <\
    vector U,\
    std::convertible_to<RealOf<U>> Scalar\
>\
[[nodiscard]]\
inline constexpr \
std::remove_cvref_t<U> op_name(U&& u, const Scalar& scalar) {\
    return op_name<std::remove_cvref_t<U>, U, Scalar>(\
        std::forward<U>(u), scalar\
    );\
} /* <-- ...<U> op_name(u, scalar) */\
\
namespace vector_operators {\
\
/*! @brief Operator for a corrsponding @ref op_name overload */\
export \
template <\
    vector U,\
    std::convertible_to<RealOf<U>> Scalar\
>\
[[nodiscard]]\
inline constexpr \
std::remove_cvref_t<U> operator op_sym (U&& u, const Scalar& scalar) {\
    return op_name(std::forward<U>(u), scalar);\
} /* <-- ...<U> operator op_sym(u, scalar) */\
\
/*! @brief Inplace element-wise op_doc of vector with scalar */\
export \
template <mut_vector U, std::convertible_to<RealOf<U>> Scalar>\
inline constexpr \
U& operator op_sym ## = (U& u, const Scalar& scalar) {\
    for (auto& ue : u) {\
        ue op_sym ## = scalar;\
    }\
    return u;\
} /* <-- operator op_sym=(u, scalar) */\
\
} /* <-- namespace vector_operators */\
\
/* real-vector operation */\
/*! @brief Element-wise op_doc of scalar with vector elements. Result via output parameter */\
export \
template <\
    mut_vector Out,\
    std::convertible_to<RealOf<Out>> Scalar,\
    vector_like<Out> U\
> inline constexpr \
void op_name (const Scalar& scalar, U&& u, Out& out) {\
    for (\
        auto [ oe, ue ] : std::views::zip(\
            out, std::forward<U>(u)\
        )\
    ) { oe = static_cast<RealOf<U>>(scalar) op_sym ue; }\
} /* <-- op_name(scalar, u, out) */\
\
/*! @brief Element-wise op_doc of scalar with vector elements. Result in return value of a user-provided type */\
export \
template <\
    container_traits::returnable Out,\
    std::convertible_to<RealOf<Out>> Scalar,\
    vector_like<Out> U\
>\
[[nodiscard]]\
inline constexpr \
Out op_name (const Scalar& scalar, U&& u) {\
    Out ret = container_traits::Traits<Out>::construct( std::ranges::size(u) );\
    op_name(scalar, std::forward<U>(u), ret);\
    return ret;\
} /* <-- Out op_name(scalar, u) */ \
/*! @brief Element-wise op_doc of vector elements with a scalar. Result in return value of automatically selected type */\
export \
template <\
    vector U,\
    std::convertible_to<RealOf<U>> Scalar\
>\
[[nodiscard]]\
inline constexpr \
std::remove_cvref_t<U> op_name(const Scalar& scalar, U&& u) {\
    return op_name<std::remove_cvref_t<U>,  Scalar, U>(\
        scalar, std::forward<U>(u)\
    );\
} /* <-- ...<U> op_name(scalar, u) */\
\
namespace vector_operators {\
\
/*! @brief Operator for a corrsponding @ref op_name overload */\
export \
template <\
    vector U,\
    std::convertible_to<RealOf<U>> Scalar\
>\
[[nodiscard]]\
inline constexpr \
std::remove_cvref_t<U> operator op_sym (const Scalar& scalar, U&& u) {\
    return op_name(scalar, std::forward<U>(u));\
} /* <-- ...<U> operator op_sym(scalar, u) */\
\
} /* <-- namespace vector_operators */\

DEF_BINARY(add, +, addition)
DEF_BINARY(sub, -, subtraction)
DEF_BINARY(mul, *, multiplication)
DEF_BINARY(div, /, division)

#undef DEF_BINARY

/**
 * @brief Operations on vectors. Read the description
 *
 * Operations defined: `+`(`add`)/`-`(`sub`)/`*`(`mul`)/`/`(`div`), the
 * following variations are supported (example for `+`/`add`, for others it's
 * practically the same) for corresponding vector types:
 *
 * ```c++
 * void add(&&u, &&v, &out); // Result via out-parameter
 * Out add<Out>(&&u, &&v);   // Result via return-value of specified type
 * U add(&&u, &&v);          // Result via return-value that is deduced
 *                           // automatically
 * void add(&&u, scalar, &out);
 * Out add<Out>(&&u, scalar);
 * U add(&&u, scalar);
 * void add(scalar, &&u, &out);
 * Out add<Out>(scalar, &&u);
 * U add(scalar, &&u);
 *
 * namespace vector_operators {
 *     U operator+(&&u, &&v);
 *     U operator+(&&u, scalar);
 *     U operator+(scalar, &&u);
 * } // <-- namespace vector_operators
 * ```
 */
namespace vector_operators {

/**
 * @brief Unary negation for vectors
 */
export
template <vector U>
[[nodiscard]]
inline constexpr
std::remove_cvref_t<U> operator-(U&& u) {
    return RealOf<U>{-1} * u;
} // <-- operator-(u)

} // <-- namespace vector_operators

} // <-- namespace dxx::math
